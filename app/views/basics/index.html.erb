<h1>Listing Basic Needs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Calories</th>
      <th>Sugar </th>
      <th>Cost</th>
      <th>Proteins </th>
      <th>carb</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @basics.each do |basic| %>
      <tr>
        <td><%= basic.firstname %></td>
        <td><%= basic.lastname %></td>
        <td><%= basic.manufacturer %></td>                
        <td><%= basic.cost %></td>
        <td><%= basic.description %></td>
        <td><%= basic.color %></td>
        <td><%= link_to 'Show', basic %></td>
        <td><%= link_to 'Edit', edit_basic_path(basic) %></td>
        <td><%= link_to 'Destroy', basic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

